{
  "buildCommand": "NODE_OPTIONS='--max-old-space-size=4096' pnpm install && pnpm run vercel-build && chmod +x ./api/python/build.sh && ./api/python/build.sh",
  "framework": "nextjs",
  "installCommand": "pnpm install",
  "outputDirectory": ".next",
  "regions": ["icn1"],
  "functions": {
    "api/python/*.py": {
      "runtime": "@vercel/python@3.1.0",
      "memory": 1024,
      "maxDuration": 10,
      "includeFiles": ["api/python/requirements.txt", "api/python/build.sh"]
    }
  },
  "build": {
    "env": {
      "PIP_TARGET": ".",
      "PIP_DISABLE_PIP_VERSION_CHECK": "1",
      "PYTHONPATH": ".",
      "PYTHONUNBUFFERED": "1"
    }
  }
}
